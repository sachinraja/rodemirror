{
  "name": "rodemirror",
  "version": "0.0.0-development",
  "description": "React component for CodeMirror 6",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && tsup src/index.tsx --format esm,cjs --dts --inject ./react-import.js",
    "type-check": "tsc",
    "test": "jest",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "semantic-release": "semantic-release",
    "prepublishOnly": "pnpm build",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sachinraja/rodemirror.git"
  },
  "keywords": [
    "react",
    "codemirror",
    "codemirror.next",
    "6",
    "code",
    "editor"
  ],
  "author": "Sachin Raja <sachinraja2349@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sachinraja/rodemirror/issues"
  },
  "homepage": "https://github.com/sachinraja/rodemirror#readme",
  "peerDependencies": {
    "@codemirror/state": ">=0.18.0",
    "@codemirror/view": ">=0.18.0",
    "react": "^16 || ^17"
  },
  "devDependencies": {
    "@codemirror/state": "0.19.2",
    "@codemirror/view": "0.19.9",
    "@swc/core": "1.2.100",
    "@swc/jest": "0.2.4",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.1.2",
    "@types/jest": "27.0.2",
    "@types/react": "17.0.30",
    "husky": "7.0.2",
    "jest": "27.3.0",
    "lint-staged": "11.2.3",
    "prettier": "2.4.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rimraf": "3.0.2",
    "semantic-release": "18.0.0",
    "tsup": "5.4.1",
    "typescript": "4.4.4"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "*.{js,ts,tsx,md,json,yml}": "prettier --write"
  }
}
