{
  "name": "rodemirror",
  "version": "0.0.0-development",
  "description": "React component for CodeMirror 6",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "yarn clean && rollup -c",
    "type-check": "tsc",
    "test": "jest",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "semantic-release": "semantic-release",
    "prepack": "yarn build",
    "postinstallDev": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sachinraja/rodemirror.git"
  },
  "keywords": [
    "react",
    "codemirror",
    "codemirror.next",
    "6",
    "code",
    "editor"
  ],
  "author": "Sachin Raja <sachinraja2349@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sachinraja/rodemirror/issues"
  },
  "homepage": "https://github.com/sachinraja/rodemirror#readme",
  "peerDependencies": {
    "@codemirror/state": ">=0.18.0",
    "@codemirror/view": ">=0.18.0",
    "react": "^16 || ^17"
  },
  "devDependencies": {
    "@codemirror/state": "0.19.1",
    "@codemirror/view": "0.19.3",
    "@rollup/plugin-typescript": "8.2.5",
    "@swc/core": "1.2.83",
    "@swc/jest": "0.1.4",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@types/jest": "26.0.24",
    "@types/react": "17.0.19",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "lint-staged": "11.1.2",
    "prettier": "2.3.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rimraf": "3.0.2",
    "rollup": "2.55.1",
    "rollup-plugin-swc": "0.2.0",
    "semantic-release": "17.4.4",
    "tslib": "2.3.0",
    "typescript": "4.3.5"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "packageManager": "yarn@3.0.1",
  "lint-staged": {
    "*.{js,ts,tsx,md,json,yml}": "prettier --write"
  }
}
