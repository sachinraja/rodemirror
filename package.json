{
  "name": "rodemirror",
  "version": "0.0.0-development",
  "description": "React component for CodeMirror 6",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "workspaces": [
    "examples/*"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup -c",
    "prepublishOnly": "npm run build",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "semantic-release": "semantic-release",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sachinraja/rodemirror.git"
  },
  "keywords": [
    "react",
    "codemirror",
    "codemirror.next",
    "6",
    "code",
    "editor"
  ],
  "author": "Sachin Raja <sachinraja2349@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sachinraja/rodemirror/issues"
  },
  "homepage": "https://github.com/sachinraja/rodemirror#readme",
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@types/react": "^17.0.11",
    "husky": "^7.0.1",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.52.6",
    "rollup-plugin-dts": "^3.0.2",
    "rollup-plugin-ts": "^1.4.0",
    "semantic-release": "^17.4.4",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "@babel/runtime": "^7.14.6",
    "@codemirror/state": "^0.18.7",
    "@codemirror/view": "^0.18.17"
  },
  "peerDependencies": {
    "react": "^16 || ^17"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
